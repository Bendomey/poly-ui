{
  "name": "poly-ui",
  "version": "1.0.0",
  "description": "<p align=\"center\">   <strong>A design system üòã that has an opinionated API ‚ù§Ô∏è, modular and accessible cool ui components for faster development ü•Ç.</strong> </p>",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "tooling/*",
      "website"
    ]
  },
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --runInBand",
    "commit": "cz",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "changelog": "conventional-changelog -p react -i CHANGELOG.md -s -r 0",
    "new-version":"lerna version --conventional-commits --yes",
    "diff":"lerna diff",
    "test:lerna":"lerna run test",
    "bootstrap": "lerna bootstrap --use-workspaces"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bendomey/poly-ui.git"
  },
  "keywords": [
    "react",
    "components",
    "design-systems",
    "ui-design",
    "robustness"
  ],
  "author": "Domey Benjamin<domeybenjamin1@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bendomey/poly-ui/issues"
  },
  "homepage": "https://github.com/Bendomey/poly-ui#readme",
  "dependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-private-methods": "^7.13.0",
    "@babel/preset-react": "^7.13.13",
    "@babel/runtime": "^7.14.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@types/node": "^15.3.0",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "esm": "^3.2.25",
    "jest-watch-typeahead": "^0.6.3",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.4",
    "conventional-changelog": "^3.1.24",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "pinst": "^2.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
